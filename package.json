{
  "name": "vitest-polly",
  "type": "module",
  "version": "0.0.0-dev",
  "exports": "./build/index.js",
  "sideEffects": false,
  "files": ["build"],
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "license": "MIT",
  "author": "Evgeny Karev",
  "repository": "https://github.com/datisthq/vitest-polly",
  "description": "Recording functionality for Vitest with Polly",
  "keywords": ["vitest", "polly"],
  "scripts": {
    "build": "tsc",
    "bump": "ncu -ws -u",
    "clean": "rm -rf **/node_modules",
    "coverage": "sensible-browser coverage/index.html",
    "format": "biome check --write",
    "lint": "biome check",
    "login:ci": "pnpm config set '//registry.npmjs.org/:_authToken=${NPM_TOKEN}'",
    "install:ci": "pnpm install --ignore-scripts",
    "prepare": "husky",
    "publish:ci": "pnpm publish --access public --ignore-scripts --no-git-checks",
    "spec": "vitest run",
    "test": "pnpm lint && pnpm type && pnpm spec",
    "type": "tsc --noEmit",
    "version:ci": "pnpm version --no-git-tag-version"
  },
  "dependencies": {
    "@pollyjs/adapter-fetch": "^6.0.6",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister-fs": "^6.0.6"
  },
  "peerDependencies": {
    "vitest": ">=3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@semantic-release/exec": "7.1.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "@types/node": "24.2.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "husky": "9.1.7",
    "npm-check-updates": "18.0.1",
    "semantic-release": "24.2.9",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
